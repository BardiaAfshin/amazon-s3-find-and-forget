{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "DataMapperModel",
    "type": "object",
    "definitions": {
        "AthenaQueryExecutorParameters": {
            "type": "object",
            "properties": {
                "DataCatalogProvider": {"enum": ["glue"],"type": "string"},
                "Database": {"type": "string"},
                "Table": {"type": "string"}
            },
            "required": ["Database", "Table"]
        }
    },
    "properties": {
        "QueryExecutor": {
            "type": "string",
            "enum": ["athena"]
        },
        "Columns": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        },
        "Format": {
            "type": "string",
            "enum": ["parquet"]
        }
    },
    "if": {
        "properties": { "QueryExecutor": { "const": "athena" } }
    },
    "then": {
        "properties": {
            "QueryExecutorParameters": {
                "$ref": "#/definitions/AthenaQueryExecutorParameters"
            }
        },
        "required": ["QueryExecutorParameters"]
    },
    "required": ["Columns", "QueryExecutor"]
}

